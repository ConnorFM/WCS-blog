{# templates/blog/article.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ article.title | title }}{% endblock %}



{% block body %}

<div>
    <h1>{{ article.title | title }}</h1>
    <h2>Category : {{ article.category.name | title }}</h2>
    <p>{{ article.content | raw }}</p>
</div>
    <strong>Tags :</strong>
    <ul>
        {% for tag in article.tags %}
            <li>{{ tag.name }} </li>
        {% else %}
            <li>No tags for this article</li>
        {% endfor %}
    </ul>
<a href="{{ path('homepage') }}">
    Back to homepage.
</a>

{% endblock %}
