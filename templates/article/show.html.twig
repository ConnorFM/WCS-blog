{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content | raw}}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ article.slug }}</td>
            </tr>
            <tr>
                <th>Author</th>
                {% if article.author %}
                    <td>{{ article.author.email }}</td>
                {% else %}
                    <td>No author set</td>
                {% endif %}
            </tr>

        </tbody>
    </table>

    <a href="{{ path('article_index') }}">back to list</a>

    {% if is_granted('EDIT', article) %}
        <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
    {% endif %}

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
